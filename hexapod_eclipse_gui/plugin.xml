<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Sample Category"
            id="hexapod_eclipse_gui">
      </category>
      <view
            name="HexapodView"
            icon="icons/sample.gif"
            category="hexapod_eclipse_gui"
            class="hexapod_eclipse_gui.views.HexapodView"
            id="hexapod_eclipse_gui.views.HexapodView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.ProblemView"
               relationship="right"
               id="hexapod_eclipse_gui.views.HexapodView">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>

</plugin>
